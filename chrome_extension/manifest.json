{
  "manifest_version": 2,
  "name": "gitify",
  "version": "1.0.0",
  "description": "Github issues notifier",
  "icons": {
    "48": "icons/icon.png"
  },
  "key": "hkcolfhkkdgfclkmnphopnkpfiiaofom",
  "author": "heron2014",
  "background": {
    "persistent": false,
    "scripts": ["keys.js", "background.js"]
  },
  "browser_action": {
    "default_title": "Gitify",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "run_at":  "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "identity",
   "https://github.com/",
   "storage"
  ]
}
